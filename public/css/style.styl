.wrapper-with-intrinsic-ratio {
position: relative;
padding-bottom: 20%; /* Adjust this to suit the aspect ratio of the image */
height: 0;
width: 300px;
text-align: center;
}
.element-to-stretch {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
background-image: url("../images/clickhere.gif");
background-size: cover;
}
.element-to-stretch:hover {
background-image: url("../images/clickhereroll.gif");
}
